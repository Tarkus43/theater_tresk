<main class='container mx-auto px-3 py-4 sm:px-4 sm:py-8'>
  <h1
    class='text-2xl sm:text-3xl font-bold mb-6 sm:mb-10 text-center sm:text-left'
    data-lang='programme'
  >
    Programme
  </h1>

  {{#if spectacles.length}}
    <div
      class='grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 sm:gap-5 md:gap-6 place-items-stretch'
    >
      {{#each spectacles}}
        <article
          class='group rounded-xl shadow-lg shadow-black/20 bg-white/10 backdrop-blur-md hover:bg-white/20 transition-all duration-300 flex flex-col overflow-hidden'
        >
          <div class='overflow-hidden rounded-t-xl'>
            <img
              src='{{imageUrl}}'
              alt='{{title}}'
              loading='lazy'
              class='w-full h-36 sm:h-48 md:h-56 max-h-50 object-cover rounded-t-xl group-hover:scale-105 transition-transform duration-500'
            />
          </div>

          <div class='flex flex-col flex-grow p-3 sm:p-4'>
            <h3
              class='text-sm sm:text-base md:text-lg font-semibold mb-1 sm:mb-2 text-amber-400 group-hover:text-amber-600 transition-colors'
            >
              {{title}}
            </h3>
            <p
              class='text-xs sm:text-sm md:text-base opacity-80 mb-2 sm:mb-3 flex-grow leading-snug'
            >
              {{description}}
            </p>

            <div
              class='text-[10px] sm:text-xs md:text-sm opacity-70 mb-3 space-y-[2px] sm:space-y-1'
            >
              <div><span data-lang='date'>Date</span>: {{dateFmt}}</div>
              <div><span data-lang='time'>Time</span>: {{timeFmt}}</div>
              <div><span data-lang='location'>Location</span>: {{location}}</div>
              <div><span data-lang='tickets_left'>Tickets left</span>: {{tickets_available}}</div>
            </div>

            <div class='mt-auto flex flex-wrap gap-1 sm:gap-2'>
              <a
                href='/spectacle?id={{id}}'
                data-link
                class='group-hover:scale-120 !text-white px-2 py-1 sm:px-3 sm:py-2 rounded-lg !bg-amber-600 !hover:bg-amber-700 text-[11px] sm:text-sm transition-colors'
              >
                <span data-lang='learn_more'></span>
              </a>
            </div>
          </div>
        </article>
      {{/each}}
    </div>

    {{! pagination }}
    {{#if pagination}}
      <article
        class='mt-10 flex flex-wrap items-center justify-center gap-2 sm:gap-3 text-xs sm:text-sm md:text-base'
      >

        {{! prev button }}
        {{#if pagination.hasPrev}}
          <div class='hover:scale-130'>
            <a href='/?page={{pagination.prevPage}}' data-link class=''>
              ‹
              <span class='text-black shadow-amber-700' data-lang='prev'></span>
            </a>
          </div>
        {{else}}
          <span class=''>
            ‹
            <span class='text-black/50' data-lang='prev'></span>
          </span>
        {{/if}}

        <span
          class='px-3 py-2 rounded-lg text-gray-700 bg-gray-100 border border-gray-300 font-semibold select-none'
        >
          <span data-lang='page'>Page</span>
          {{pagination.page}}/{{pagination.totalPages}}
        </span>

        {{! next button }}
        {{#if pagination.hasNext}}
          <div class='hover:scale-130'>
            <a href='/?page={{pagination.nextPage}}' data-link class='text-black'>
              <span class='text-black' data-lang='next'></span>
              ›
            </a>
          </div>
        {{else}}
          <span class='text-black'>
            <span class='text-black/50' data-lang='next'></span>
            ›
          </span>
        {{/if}}
      </article>
    {{/if}}

  {{else}}
    <p
      class='opacity-70 text-center text-base sm:text-lg md:text-xl mt-10'
      data-lang='nothing_here_yet'
    ></p>
  {{/if}}

  <div class="flex flex-col justify-center items-center mt-30 !bg-white/20">
      <h2 class='text-2xl sm:text-3xl font-bold sm:mb-8 text-center sm:text-left' data-lang="find_us"></h2>  
      <iframe class="h-100 w-full mt-10 mb-30 shadow-2xl" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.502061193313!2d14.465663377026988!3d50.09560897152664!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x470bed27890d0661%3A0x54101a13faf2ec17!2sDivadlo%20T%C5%99esk!5e0!3m2!1sru!2scz!4v1760437421558!5m2!1sru!2scz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

  </div>
</main>