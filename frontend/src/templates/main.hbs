<main class="container mx-auto p-4">
  <h1 class="text-2xl mb-4" data-lang="programme">Programme</h1>

  {{#if spectacles.length}}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {{#each spectacles}}
        <article class="rounded-2xl shadow p-3 bg-white/5">
          <img
            src="{{imageUrl}}"
            alt="{{title}}"
            loading="lazy"
            class="w-full h-56 object-cover rounded-xl mb-3"
          />

          <h3 class="text-xl font-semibold mb-1">{{title}}</h3>
          <p class="opacity-80 mb-2">{{description}}</p>

          <div class="text-sm opacity-80 mb-3">
            <div><span data-lang="date">Date</span>: {{dateFmt}}</div>
            <div><span data-lang="time">Time</span>: {{timeFmt}}</div>
            <div><span data-lang="location">Location</span>: {{location}}</div>
            <div><span data-lang="tickets_left">Tickets left</span>: {{tickets_available}}</div>
          </div>

          <div class="flex gap-2">
            <a href="/tickets" data-link class="px-3 py-2 rounded-xl bg-amber-600 hover:bg-amber-700">
              <span data-lang="buy_tickets">Buy tickets</span>
            </a>
            <a href="/about" data-link class="px-3 py-2 rounded-xl border border-white/20 hover:bg-white/10">
              <span data-lang="details">Details</span>
            </a>
          </div>
        </article>
      {{/each}}
    </div>

    {{!-- Пагинация --}}
    {{#if pagination}}
      <nav class="mt-6 flex items-center justify-center gap-2">
        {{#if pagination.hasPrev}}
          <a href="/?page={{pagination.prevPage}}" data-link
             class="px-3 py-2 rounded-lg border border-white/20 hover:bg-white/10">
            ‹ <span data-lang="prev">Prev</span>
          </a>
        {{else}}
          <span class="px-3 py-2 rounded-lg border border-white/10 opacity-50 cursor-not-allowed">‹ <span data-lang="prev">Prev</span></span>
        {{/if}}

        <span class="px-3 py-2 text-sm opacity-80">
          <span data-lang="page">Page</span> {{pagination.page}} / {{pagination.totalPages}}
        </span>

        {{#if pagination.hasNext}}
          <a href="/?page={{pagination.nextPage}}" data-link
             class="px-3 py-2 rounded-lg border border-white/20 hover:bg-white/10">
            <span data-lang="next">Next</span> ›
          </a>
        {{else}}
          <span class="px-3 py-2 rounded-lg border border-white/10 opacity-50 cursor-not-allowed"><span data-lang="next">Next</span> ›</span>
        {{/if}}
      </nav>
    {{/if}}

  {{else}}
    <p class="opacity-70" data-lang="nothing_here_yet">Пока ничего нет…</p>
  {{/if}}
</main>
