<header class='flex flex-col justify-end items-center w-full h-160 overflow-hidden'>

  <img src='{{image}}' alt='{{name}}' class='!w-full !h-full !object-cover !object-center' />
  <div class='w-full text-center'>

    <div class='bg-amber-700 h-10'></div>
    <h1 class='!text-7xl md:text-5xl font-bold text-black px-4 !m-10'>
      {{title}}
    </h1>

  </div>

</header>


<main class='flex flex-col items-center justify-center w-full'>
  <section class='max-w-5xl mx-auto p-4 text-black !border-4 !border-amber-900 rounded-lg my-10'>

    <div class='mb-6'>
      <h2 class='text-2xl font-semibold mb-2' data-lang='description'></h2>
      <p class='text-lg'>{{description}}</p>
    </div>

    <div class='flex flex-col gap-2 mb-6'>

      <h2 class='text-4xl font-semibold mb-2' data-lang='details'></h2>
      <p class='text-4xl'>{{full_description}}</p>
      <div class='mt-4'>
        <ul class='list-disc list-inside'>
          <li><strong data-lang='date'></strong>: {{date}}</li>
          <li><strong data-lang='time'></strong>: {{time}}</li>
          <li><strong data-lang='location'></strong>: {{location}}</li>
        </ul>
      </div>

    </div>

    {{#if imageUrl}}
      <div class='mb-6'>
        <img src='{{imageUrl}}' alt='{{title}}' class='w-full h-auto rounded-lg shadow-lg' />
      </div>
    {{/if}}

    {{#if ticketLink}}
      <div class='text-center'>
        <a
          href='{{ticketLink}}'
          target='_blank'
          rel='noopener noreferrer'
          class='bg-amber-700 hover:bg-amber-900 text-white font-bold py-3 px-6 rounded-lg transition duration-300'
          data-lang='buy_tickets'
        ></a>
      </div>
    {{/if}}

  </section>

  <div class="mb-10 w-full flex justify-center items-center">
    <form class=" flex flex-col gap-10 justify-center items-center p-20 border-2" action="/buy_tickets" method="post" data-link>
      <input type="hidden" name="spectacle_id" value="{{id}}">
      <input class="!border-4 !border-amber-700" type="text" name="name" id="user_name" placeholder="Your Name" required class="border border-gray-300 rounded px-3 py-2 mb-4 w-full max-w-md">
      <input class="!border-4 !border-amber-700" type="email" name="email" id="user_email" placeholder="Your Email" required class="border border-gray-300 rounded px-3 py-2 mb-4 w-full max-w-md">
      <button type="submit" class="!bg-amber-700 !hover:bg-amber-900 !text-white !font-bold !py-2 !px-4 !rounded !transition !duration-300" data-lang="buy_tickets"></button>
    </form>
  </div>

</main>
