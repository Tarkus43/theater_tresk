<header class="relative w-full overflow-hidden bg-black h-[40vh] sm:h-[50vh] md:h-[65vh] lg:h-[80vh] xl:h-[90vh]">
  {{#each spectacleImages}}
    <div
      class="absolute inset-0 bg-cover bg-center opacity-0 animate-fade scale-110"
      style="background-image: url('{{this}}'); animation-delay: {{multiply @index 4}}s;"
    ></div>
  {{/each}}

  <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent mix-blend-multiply"></div>

  <div class="absolute inset-0 flex flex-col justify-center items-start px-6 sm:px-10 md:px-16 lg:px-32 text-left">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl text-white font-extrabold leading-tight drop-shadow-[0_0_25px_rgba(0,0,0,0.9)] max-w-[90%] sm:max-w-[70%]">
      <span data-lang="header_title">Theater Tresk</span>
    </h1>
    <p class="mt-4 text-base sm:text-lg md:text-xl lg:text-2xl text-gray-200 font-light drop-shadow-[0_0_15px_rgba(0,0,0,0.8)] max-w-[85%] sm:max-w-[65%]">
      <span data-lang="header_subtitle">A small independent theater in the city center</span>
    </p>
  </div>
</header>

